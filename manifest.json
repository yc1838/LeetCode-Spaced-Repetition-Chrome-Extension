{
    "manifest_version": 3,
    "name": "LeetCode EasyRepeat",
    "version": "1.0.1",
    "description": "Automatically capture LeetCode submissions and schedule spaced repetition reviews.",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "options_ui": {
        "page": "dist/src/options/options.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "dist/src/popup/popup.html",
        "default_title": "LeetCode EasyRepeat"
    },
    "background": {
        "service_worker": "dist/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "src/algorithms/srs_logic.js",
                "src/shared/config.js",
                "src/algorithms/fsrs_logic.js",
                "src/content/content_ui.js",
                "src/content/leetcode_dom.js",
                "src/shared/storage.js",
                "src/content/leetcode_api.js",
                "src/algorithms/vector_db.js",
                "src/content/shadow_logger.js",
                "src/content/llm_sidecar.js",
                "src/content/morning_greeting.js",
                "src/content/skill_graph.js",
                "src/content/drill_queue.js",
                "src/content/skill_animations.js",
                "src/content/agent_content_init.js",
                "src/content/content.js"
            ],
            "css": [
                "src/content/content.css",
                "src/content/llm_sidecar.css"
            ]
        }
    ]
}
