{
    "manifest_version": 3,
    "name": "LeetCode LeetCode EasyRepeat",
    "version": "1.0.1",
    "description": "Automatically capture LeetCode submissions and schedule spaced repetition reviews.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://leetcode.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "LeetCode LeetCode EasyRepeat"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "srs_logic.js",
                "fsrs_logic.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ]
}